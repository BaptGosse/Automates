{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Automates Editor",
  "version": "1.0.0",
  "identifier": "fr.baptgosse.automates",
  "build": {
    "beforeDevCommand": "npm run dev --prefix ../frontend",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build --prefix ../frontend",
    "frontendDist": "../frontend/build"
  },
  "app": {
    "windows": [
      {
        "title": "Éditeur d'Automates",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/backend.jar": "./"
    },
    "copyright": "© 2026 Baptiste Gosselin",
    "category": "DeveloperTool"
  }
}
